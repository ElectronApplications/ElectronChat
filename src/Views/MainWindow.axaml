<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ElectronChat.Views.MainWindow"
        xmlns:controls="clr-namespace:ElectronChat.Views"
        Title="ElectronChat"
        MinWidth="640" MinHeight="480"
        Width="800" Height="600">
    
    <Grid ColumnDefinitions="220, *">
        <controls:NodesView Grid.Column="0" DataContext="{Binding NodesVM}" Margin="2"/>
        <controls:ChatView Grid.Column="1" DataContext="{Binding ChatVM}" Margin="2"/>
    </Grid>

</Window>